<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/landing"
    android:layout_height="match_parent"
    tools:context=".Bills">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0083BB"
        android:translationZ="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Jaldi."
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageButton"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00842E2E"
            android:contentDescription="Menu"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_menu_sort_by_size" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bills"
        app:layout_constraintTop_toBottomOf="@id/constraintLayout"
        android:textSize="40dp"
        android:textColor="@color/black"
        android:paddingTop="20dp"
        android:paddingHorizontal="20dp"
        android:id="@+id/bills"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bills"
        android:padding="3dp"
        android:background="@android:color/holo_blue_dark"
        android:layout_marginHorizontal="20dp"></RelativeLayout>

    <!-- RecyclerView to display bills -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/googlePayButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bills" />

    <RelativeLayout
        app:layout_constraintBottom_toBottomOf="parent"
        android:clickable="true"

        android:id="@+id/googlePayButton"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:translationZ="20dp"
        android:outlineAmbientShadowColor="@color/black"
        android:background="@drawable/googlepay_button_background"
        android:padding="2sp"
        android:contentDescription="@string/googlepay_button_content_description">
        <LinearLayout
            android:duplicateParentState="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <ImageView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="fitCenter"
                android:duplicateParentState="true"
                android:src="@drawable/googlepay_button_content"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:duplicateParentState="true"
            android:src="@drawable/googlepay_button_overlay"/>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>