<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/landing"
    tools:context=".Complain">

    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0083BB"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Jaldi."
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageButton"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00842E2E"
            android:contentDescription="Menu"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_menu_sort_by_size" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Raise a Complain Text -->
    <TextView
        android:id="@+id/raiseComplainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Water Supplier Details"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Container for Details -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/circular_vera_colour"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/raiseComplainText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Pump House Name -->
        <TextView
            android:id="@+id/pumpHouseNameLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Pump House Name"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/pumpHouseNameText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="- pumphouseName"
            android:paddingHorizontal="4dp"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/pumpHouseNameLabel"
            app:layout_constraintStart_toEndOf="@id/pumpHouseNameLabel"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Timing -->
        <TextView
            android:id="@+id/timingLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Timing"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/pumpHouseNameLabel"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/timingText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="- timing"
            android:layout_marginTop="5dp"
            android:paddingHorizontal="4dp"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/pumpHouseNameText"
            app:layout_constraintStart_toEndOf="@id/timingLabel"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Phone Number -->
        <TextView
            android:id="@+id/phoneLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/timingLabel"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/phoneText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="- +91 xxxxx-xxxxx"
            android:paddingHorizontal="4dp"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/timingText"
            app:layout_constraintStart_toEndOf="@id/phoneLabel"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Email -->
        <TextView
            android:id="@+id/emailLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/phoneLabel"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/emailText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="- supplier@gmail.com"
            android:paddingHorizontal="4dp"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/phoneText"
            app:layout_constraintStart_toEndOf="@id/emailLabel"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Buttons -->
        <Button
            android:id="@+id/phoneButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/phone_icon"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/emailText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth="20dp"
            app:layout_constraintHeight="20dp"/>

        <Button
            android:id="@+id/emailButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/mail_icon"
            app:layout_constraintTop_toBottomOf="@id/emailText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth="20dp"
            app:layout_constraintHeight="20dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
